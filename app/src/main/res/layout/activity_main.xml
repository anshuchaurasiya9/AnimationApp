<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/TvAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="150dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Animate Me!"
        android:textSize="20sp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ClickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="270dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/btn_selector"
        android:layout_marginEnd="20dp"
        android:onClick="animateButton"
        android:text="fade me" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rotateBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/btn_selector"
        android:text="@string/rotate_me" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zoomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:background="@drawable/btn_selector"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="288dp"
        android:text="@string/zoom_me" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bounceBtn"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="370dp"
        android:layout_toEndOf="@+id/blinkBtn"
        android:background="@drawable/btn_selector"
        android:text="@string/bounce_me" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/blinkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="374dp"
        android:background="@drawable/btn_selector"
        android:text="@string/blink_me" />

</RelativeLayout>